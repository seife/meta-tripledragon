+//--------------------------------------------------------------------------
+// The STB04 has a fixed number of cycles that get added in regardless.
+// Adjust an ide_timing struct to accommodate that.
+static void stb04xxx_ide_adjust_timing(struct ide_timing * const t) {
+	t->setup   -= 2;
+	t->act8b   -= 1;
+	t->rec8b   -= 1;
+	t->active  -= 1;
+	t->recover -= 1;
+}
