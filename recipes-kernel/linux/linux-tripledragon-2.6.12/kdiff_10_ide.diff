+static void stb04xxx_dma_start(ide_drive_t * const drive) {
+	volatile ide_t * const ide  = (ide_t *) HWIF(drive)->hwif_data;
+
+	mb();																	// start DMA
+	ide->si_c0dcm |= 0x01000000;
+}
