+	nents = blk_rq_map_sg (drive->queue, rq, sg);
+	hwif->sg_dma_direction = (rq_data_dir (rq) == READ) ? DMA_FROM_DEVICE : DMA_TO_DEVICE;
+	return(dma_map_sg (NULL, sg, nents, hwif->sg_dma_direction));
+}
